<h1>Bookmarks#new</h1>
<p>Find me in app/views/bookmarks/new.html.erb</p>

<%= simple_form_for [@list, @bookmark]  do |f| %>
  <%= f.input :comment %>
  <%= f.input :movie_id, collection: @movies, label_method: :title, value_method: :id, include_blank: false %>
  <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
<% end %>
